
Algoritmo sin_titulo
	menu
FinAlgoritmo



Funcion menu
	si primera_vez == 0
		Escribir "Ingrese su nombre de usuario"
		leer nombre_usuario
		Escribir "Bienvedio ", nombre_usuario
		primera_vez = 1
	fin si 
	revision = Verdadero

	Mientras salir == Falso 
		Limpiar Pantalla
		Escribir "*************************** Menú Principal*****************************"
		escribir "A. Cuadrado"
		escribir "B. Encriptador"
		escribir "C. Conversor de base"
		escribir "D. Salir"
		Leer opcion_menu
		revision = Verdadero
	
		Mientras revision = Verdadero
			
			Segun opcion_menu Hacer
				"a","A":
					revision = falso
					salir = Cuadrado
				"b","B":
					revision = falso
					salir = Encriptador
				"c","C":
					revision = falso
					salir = Conversor_de_base
				"d","D":
					Salir = Verdadero
					revision = Falso
				De Otro Modo:
					opcion_no_encontrada = Verdadero
					Mientras  opcion_no_encontrada = Verdadero
						Limpiar Pantalla
						Escribir "Ingrese una opcion correcta"
						escribir "A. Cuadrado"
						escribir "B. Encriptador"
						escribir "C. Conversor de base"
						escribir "D. Salir"
						Leer opcion_menu
						opcion_no_encontrada = Falso
					fin mientras 
			Fin Segun
		FinMientras
	FinMientras
FinFuncion



Funcion salir <- Cuadrado
	Limpiar Pantalla
	Mientras i = Falso
		Escribir "Opcion CUADRADO esta en contruccion"," Lo siento :("
		Escribir "Ingrese A o B"
		Escribir "A. Menu"
		Escribir "B. Salir"
		leer op 
		
		Mientras (op <> "A" y op <> "a") y (op <> "B" y op <> "b")
			Limpiar Pantalla
			Escribir "Ingrese una opcion correcta"
			Escribir "Ingrese A o B"
			Escribir "A. Menu"
			Escribir "B. Salir"
			leer op 
			
		FinMientras
		si op =="A" o op == "a"
			i = Verdadero
		sino 
			salir = Verdadero
			Escribir "Gracias por usar el progrma"
			
		FinSi
		i = Verdadero
	FinMientras
FinFuncion
	
